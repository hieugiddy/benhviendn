        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title">Đăng ký tài khoản khám bệnh</h4>
                        <div class="ms-auto text-end">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/account">Tài khoản</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">
                                        Đăng ký
                                    </li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="card">
                    <div class="card-body wizard-content">
                        <form id="example-form" method="post">
                            <div>
                                <h3>Tài khoản</h3>
                                <section>
                                    <label for="userName">Tên đăng nhập *</label>
                                    <input id="userName" name="UserName" type="text"
                                        class="required form-control" /><br>
                                    <label for="password">Mật khẩu *</label>
                                    <input id="password" name="Password" type="password"
                                        class="required form-control" /> <br>
                                    <label for="confirm">Nhập lại mật khẩu *</label>
                                    <input id="confirm" name="confirmPassword" type="password"
                                        class="required form-control" />
                                    <br>
                                    <p>(*) Bắt buộc</p>
                                </section>
                                <h3>Hồ sơ</h3>
                                <section>
                                    <label for="name">Họ tên *</label>
                                    <input id="name" name="HoTen" type="text" class="required form-control" />
                                    <label for="gioitinh">Giới tính *</label>
                                    <select class="select2 form-select shadow-none select2-hidden-accessible"
                                        style="width: 100%; height: 36px" data-select2-id="1" tabindex="-1"
                                        aria-hidden="true" name="GioiTinh">
                                        <option value="1">Nam</option>
                                        <option value="0">Nữ</option>
                                        <option value="2">Khác</option>
                                    </select>
                                    <label for="NgaySinh">Ngày sinh *</label>
                                    <input type="text" class="required form-control" name="NgaySinh" id="date"
                                        placeholder="Chọn ngày sinh" readonly />

                                    <label for="SoDT">Số ĐT *</label>
                                    <input id="SoDT" name="SoDT" type="text" class="required form-control" />
                                    <label for="Email">Email</label>
                                    <input id="Email" name="Email" type="text" class="required email form-control" />
                                    <label for="CMND">CMND/CCID *</label>
                                    <input id="CMND" name="CMND" type="text" class="required cmnd form-control" />
                                    <label for="DiaChi">Địa chỉ *</label>
                                    <input id="DiaChi" name="DiaChi" type="text" class="form-control" />
                                    <label for="SoTheBHYT">Số thẻ BHYT *</label>
                                    <input id="SoTheBHYT" name="SoTheBHYT" type="text" class="form-control" />
                                    <br> 
                                    <p>(*) Bắt buộc</p>
                                </section>
                                <h3>Hoàn thành</h3>
                                <section>
                                    <input id="acceptTerms" name="acceptTerms" type="checkbox" class="required" />
                                    <label for="acceptTerms">Tôi đồng ý với các Điều khoản và Điều kiện..</label>
                                </section>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
