    <script src="/static/dist/datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="/static/dist/datepicker/locales/bootstrap-datepicker.vi.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        <%if (messenger) {%>
            toastr["error"]("<%=messenger%>");
        <%}%>
    </script>
    <script>
        // Basic Example with form
        var form = $("#example-form");

        $.validator.addMethod("validatePassword", function (value, element) {
            return this.optional(element) || /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,16}$/i.test(value);
        });

        form.validate({
            errorPlacement: function errorPlacement(error, element) {
                element.before(error);
            },
            rules: {
                "UserName": {
                    required: true,
                    maxlength: 20,
                },
                "Password": {
                    required: true,
                    validatePassword: true,
                },
                "confirmPassword": {
                    equalTo: "#password",
                },
                "HoTen": {
                    required: true,
                    maxlength: 100
                },
                "NgaySinh": {
                    required: true,
                    date: true,
                },
                "SoDT": {
                    required: true,
                    maxlength: 11,
                },
                "Email": {
                    required: true,
                    email: true
                },
                "CMND": {
                    required: true,
                },
                "DiaChi": {
                    required: true,
                },
                "SoTheBHYT": {
                    required: true,
                },
                "acceptTerms": {
                    required: true
                }
            },
            messages: {
                "UserName": {
                    required: "Hãy nhập ít nhât 1 ký tự",
                    maxlength: "Hãy nhập tối đa 20 ký tự",
                },
                "Password": {
                    required: "Bắt buộc nhập password",
                    validatePassword: "Hãy nhập ít nhất 8 ký tự, có chữ hoa, chữ thường và ít nhất một chữ số"
                },
                "confirmPassword": {
                    equalTo: "Hai password phải giống nhau",
                },
                "HoTen": {
                    required: "Bắt buộc phải nhập trường này",
                    maxlength: "Hãy nhập tối đa 100 ký tự",
                },
                "NgaySinh": {
                    required: "Bắt buộc phải nhập trường này",
                    date: "Trường này phải đúng định dạng ngày",
                },
                "SoDT": {
                    required: "Bắt buộc phải nhập trường này",
                    maxlength: "Hãy nhập tối đa 11 ký tự",
                },
                "Email": {
                    required: "Bắt buộc phải nhập trường này",
                    email: "Bạn chỉ được phép nhập email"
                },
                "CMND": {
                    required: "Bắt buộc phải nhập trường này",
                },
                "DiaChi": {
                    required: "Bắt buộc phải nhập trường này",
                },
                "SoTheBHYT": {
                    required: "Bắt buộc phải nhập trường này",
                },
                "acceptTerms": {
                    required: "Bạn cần phải đồng ý với điều khoản dịch vụ của chúng tôi"
                }
            },
        });

        form.children("div").steps({
            headerTag: "h3",
            bodyTag: "section",
            transitionEffect: "slideLeft",
            onStepChanging: function (event, currentIndex, newIndex) {
                form.validate().settings.ignore = ":disabled,:hidden";
                return form.valid();
            },
            onFinishing: function (event, currentIndex) {
                form.validate().settings.ignore = ":disabled";
                return form.valid();
            },
            onFinished: function (event, currentIndex) {
                form.submit();
            },
        });
        $('#date').datepicker({
            format: "yyyy-mm-dd",
            language: "vi",
            calendarWeeks: true,
            autoclose: true
        });
    </script>
</body>

