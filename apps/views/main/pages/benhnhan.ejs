<div class="container-fluid">
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table id="zero_config" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Mã số</th>
              <th>Họ tên</th>
              <th>Giới tính</th>
              <th>Số CMND</th>
              <th>Mã số sổ sức khỏe</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% data.BN.forEach(function(item){ %>
            <tr> 
              <td><%= item.ID %></td>
              <td><%= item.HoTen %></td>
              <td>
                <% if(item.GioiTinh==1){ %> Nam <%}%>
                <% if(item.GioiTinh==0){ %> Nữ <%}%>
                <% if(item.GioiTinh==2){ %> Khác <%}%>
              </td>
              <td><%= item.CMND %></td>
              <td><%= item.IDSSK %></td>
              <td>
                <a href="/thong-tin/<%= item.ID %>">
                  <button type="button" class="btn btn-outline-info">Xem chi tiết</button>
                </a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!--js add-->
<script src="/static/assets/extra-libs/DataTables/datatables.min.js"></script>
<script>
  /****************************************
   *       Basic Table                   *
   ****************************************/
  $("#zero_config").DataTable();
</script>